<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CRUDApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/primaryColorDark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>

        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CRUDApp" parent="Base.Theme.CRUDApp" />

    <style name="TitleFontStyle" >
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="TitlePageFontStyle" >
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TitlePageFontStyle16sp" >
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SubtitleFontStyle" >
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTabLayout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>